<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SimpleUIApp.MainWindow"
        Title="Simple UI"
        Width="400"
        Height="200">

  <StackPanel Margin="10">
    <TextBox Name="TextBox1" Text="Enter first value" />
    <TextBox Name="TextBox2" Text="Enter second value" Margin="0,10,0,0" />
    <Button Name="CalculateButton" Content="Calculate" Margin="0,10,0,0" Click="OnCalculateButtonClick"/>
    <TextBlock Name="ResultLabel" Text="Result will be displayed here" Margin="0,10,0,0"/>
 
   <!-- CheckBox with event handlers for toggling -->
    <CheckBox Name="OptionCheckBox" Content="Enable Special Calculation" 
              Margin="10,10,10,0" 
              Checked="OnCheckBoxToggled" 
              Unchecked="OnCheckBoxToggled"/>
              
   </StackPanel>
</Window>
